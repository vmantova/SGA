
@model IEnumerable<SGA.Models.Aluno>

@{
    ViewBag.Title = "Index";
}

<ol class="breadcrumb">
    <li> <a href="@Url.Action("Index","Home")">Início</a> </li>
    <li> <a href="@Url.Action("Index","Cadastros")">Cadastros</a> </li>
    <li class="active">Alunos</li>
</ol>



<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-10">
                <i class="fa fa-group fa-3x"></i>
                <span style="margin-left:25px;font-size:32px">Alunos Cadastrados</span>
            </div>
            <div class="col-lg-offset-2 text-center">
                <a class="btn btn-default btn-lg" role="button" href="@Url.Action("Create")">Novo</a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table id="dtVoluntario" class="table table-bordered table-striped table-hover table-condensed">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Nome
                </th>
                <th>
                   Idade
                </th>
                <th>
                    Contato
                </th>
                <th>
                    Endereco
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AlunoId)</td>
                    <td>@($"{item.Nome} {item.Sobrenome}")</td>
                    <td>@Html.DisplayFor(modelItem => item.Idade)</td>
                    <td>@Html.DisplayFor(modelItem => item.TelefoneContato)</td>
                    <td>@($"{item.Endereco}, {item.Numero}, {item.Cidade} - {item.Estado}")</td>
                    <td>
                        <a class="btn btn-primary" title="Editar" href="@Url.Action("Edit",new { id = item.AlunoId})"><i class="fa fa-pencil" style="font-size:20px "></i></a>
                        <span></span>
                        <a class="btn btn-danger" title="Excluir" href="@Url.Action("Delete",new { id = item.AlunoId})"><i class="fa fa-times" style="font-size:20px "></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

