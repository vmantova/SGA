
@model SGA.Models.Aluno

@Styles.Render("~/Content/css")

<ol class="breadcrumb">
    <li> <a href="@Url.Action("Index","Home")">Início</a> </li>
    <li> <a href="@Url.Action("Index","Cadastros")">Cadastros</a> </li>
    <li> <a href="@Url.Action("Index","Aluno")">Alunos</a> </li>
    <li class="active">Editar</li>
</ol>

<br />
<div class="container">

    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-12">
                    <i class="fa fa-group fa-3x"></i>
                    <span style="margin-left:25px;font-size:32px">Editar Aluno</span>
                </div>
            </div>

        </div>
        <div class="panel-body">

            @using (Html.BeginForm("Edit", "Aluno", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => Model.AlunoId)
                @Html.HiddenFor(m => Model.DtCadastro)


                <div class="form-group">
                    <label class="col-lg-2 control-label"> Nome</label>
                    <div class="col-lg-4">
                        @Html.EditorFor(m => Model.Nome, new { htmlAttributes = new { @class = "form-control", @maxlength = 30 } })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Sobrenome</label>
                    <div class="col-lg-8">
                        @Html.EditorFor(m => Model.Sobrenome, new { htmlAttributes = new { @class = "form-control", @maxlength = 100 } })
                    </div>

                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Data de Nascimento</label>
                    <div class="col-lg-1">
                        <div class="input-group">
                            @Html.EditorFor(model => model.DtNascimento, new { htmlAttributes = new { @class = "form-control", @id = "dtNascimento" } })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Idade</label>
                    <div class="col-lg-1">
                        @Html.EditorFor(m => Model.Idade, new { htmlAttributes = new { @class = "form-control", @min = 18, @max = 99 } })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Telefone</label>
                    <div class="col-lg-2">
                        @Html.EditorFor(m => Model.TelefoneContato, new { htmlAttributes = new { @class = "form-control", @maxlength = 9 } })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Endereço</label>
                    <div class="col-lg-3">
                        @Html.EditorFor(m => Model.Endereco, new { htmlAttributes = new { @class = "form-control", @maxlength = 100 } })
                    </div>
                    <label style="width:67px;margin-left:-12px" class="col-lg-1 control-label"> Número</label>
                    <div class="col-lg-1">
                        @Html.EditorFor(m => Model.Numero, new { htmlAttributes = new { @class = "form-control", @min = 1, @max = 9999 } })
                    </div>
                    <label style="width:67px" class="col-lg-1 control-label"> Cidade</label>
                    <div class="col-lg-2">
                        @Html.EditorFor(m => Model.Endereco, new { htmlAttributes = new { @class = "form-control", @maxlength = 100 } })
                    </div>
                    <label style="width:77px;margin-left:-44px" class="col-lg-1 control-label"> UF</label>
                    <div class="col-lg-1">
                        @Html.EditorFor(m => Model.Estado, new { htmlAttributes = new { @class = "form-control", @maxlength = 2 } })
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <div class="col-lg-8" style="margin-left:182px">
                        <button class="btn btn-primary btn-lg">Salvar</button>
                        <a class="btn btn-danger btn-lg b" href="@Url.Action("Index")">Cancelar</a>
                    </div>
                    <div class="col-lg-2">

                    </div>
                </div>
            }

        </div>
    </div>

</div>

@Scripts.Render("~/bundles/jquery")


