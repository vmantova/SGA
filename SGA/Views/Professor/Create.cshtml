
@model SGA.Models.Professor

@{
    ViewBag.Title = "Create";
}

@Styles.Render("~/Content/css")

<ol class="breadcrumb">
    <li> <a href="@Url.Action("Index","Home")">Início</a> </li>
    <li> <a href="@Url.Action("Index","Cadastros")">Cadastros</a> </li>
    <li> <a href="@Url.Action("Index","Professor")">Professores</a> </li>
    <li class="active">Novo</li>
</ol>

<br />
<div class="container">

    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-12">
                    <i class="fa fa-group fa-3x"></i>
                    <span style="margin-left:25px;font-size:32px">Novo Professor</span>
                </div>
            </div>

        </div>
        <div class="panel-body">

            @using (Html.BeginForm("Create", "Professor", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Grau Acadêmico</label>
                    <div class="col-lg-2">
                        <select id="Grau" name="Grau" class="form-control">
                            <option value="">Selecione</option>
                            <option value="L">Licenciado</option>
                            <option value="M">Mestrado</option>
                            <option value="D">Doutorado</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Nome</label>
                    <div class="col-lg-4">
                        <input placeholder="Insira o nome" type="text" name="Nome" class="form-control" maxlength="12" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Sobrenome</label>
                    <div class="col-lg-8">
                        <input placeholder="Insira o sobrenome" type="text" name="Sobrenome" class="form-control" maxlength="100" />
                    </div>

                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Data de Nascimento</label>
                    <div class="col-lg-1">
                        <div class="input-group">
                            @Html.EditorFor(model => model.DtNascimento, new { htmlAttributes = new { @class = "form-control", @id = "dtNascimento" } })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Idade</label>
                    <div class="col-lg-1">
                        <input type="number" name="Idade" class="form-control" min="18" max="99" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Telefone</label>
                    <div class="col-lg-2">
                        <input placeholder="Telefone para contato" type="text" name="TelefoneContato" class="form-control" maxlength="9" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> CPF</label>
                    <div class="col-lg-4">
                        <input type="text" placeholder="Documento" name="Cpf" class="form-control" maxlength="11" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Endereço</label>
                    <div class="col-lg-3">
                        <input placeholder="Nome da rua" type="text" name="Endereco" class="form-control" maxlength="100" />
                    </div>
                    <label style="width:67px;margin-left:-12px" class="col-lg-1 control-label"> Número</label>
                    <div class="col-lg-1">
                        <input type="number" name="Numero" class="form-control" min="1" />
                    </div>
                    <label style="width:67px" class="col-lg-1 control-label"> Cidade</label>
                    <div class="col-lg-2">
                        <input placeholder="Cidade"  type="text" name="Cidade" class="form-control" maxlength="100" />
                    </div>
                    <label style="width:77px;margin-left:-44px" class="col-lg-1 control-label"> UF</label>
                    <div class="col-lg-1">
                        <input placeholder="UF" type="text" name="Estado" class="form-control" maxlength="2" />
                    </div>
                </div>
                
                <br />
                <div class="form-group">
                    <div class="col-lg-8" style="margin-left:182px">
                        <button class="btn btn-primary btn-lg">Enviar</button>
                        <a class="btn btn-danger btn-lg b" href="@Url.Action("Index")">Cancelar</a>
                    </div>
                    <div class="col-lg-2">

                    </div>
                </div>
            }

        </div>
    </div>

</div>

@Scripts.Render("~/bundles/jquery")


