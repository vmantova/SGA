
@model SGA.Models.Doacao

@{
    ViewBag.Title = "Create";
}

@Styles.Render("~/Content/css")

<ol class="breadcrumb">
    <li> <a href="@Url.Action("Index","Home")">Início</a> </li>
    <li> <a href="@Url.Action("Index","Cadastros")">Doação</a> </li>
    <li class="active">Novo</li>
</ol>

<br />
<div class="container">

    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-12">
                    <i class="fa fa-group fa-3x"></i>
                    <span style="margin-left:25px;font-size:32px">Registra nova doação</span>
                </div>
            </div>

        </div>
        <div class="panel-body">

            @using (Html.BeginForm("Create", "Doacao", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Item</label>
                    <div class="col-lg-8">
                        <input type="text" maxlength="50" name ="Item" placeholder="Descrição do Item" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Quantidade</label>
                    <div class="col-lg-1">
                        <input type="number" name="Quantidade" class="form-control" min="0" max="9999"  />
                    </div>
                    <label style="margin-left:-68px" class="col-lg-2 control-label"> Valor Estimado</label>
                    <div class="col-lg-1">
                        <input style="width:78px" type="text"  name="Preco" class="form-control" maxlength="5" />
                    </div>
                </div>
                
                <br />
                <div class="form-group">
                    <div class="col-lg-8" style="margin-left:182px">
                        <button class="btn btn-primary btn-lg">Enviar</button>
                        <a class="btn btn-danger btn-lg b" href="@Url.Action("Index","Cadastros")">Cancelar</a>
                    </div>
                </div>
            }

        </div>
    </div>

</div>

@Scripts.Render("~/bundles/jquery")


