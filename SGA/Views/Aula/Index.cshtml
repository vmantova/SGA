
@model IEnumerable<SGA.Models.Aula>

<ol class="breadcrumb">
    <li> <a href="@Url.Action("Index","Home")">Início</a> </li>
    <li> <a href="@Url.Action("Index","Cadastros")">Cadastros</a> </li>
    <li class="active">Aula</li>
</ol>

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-10">
                <i class="fa fa-group fa-3x"></i>
                <span style="margin-left:25px;font-size:32px">Aulas Cadastrados</span>
            </div>
            <div class="col-lg-offset-2 text-center">
                <a class="btn btn-default btn-lg" role="button" href="@Url.Action("Create")">Novo</a>
            </div>
        </div>

    </div>
    <div class="panel-body">
        <table class="table table-bordered table-striped table-hover table-condensed">
            <tr>
                <th>
                    ID
                </th>
                <th>
                   Matéria
                </th>
                <th>
                    Descrição
                </th>
                <th>
                    Horário   
                </th>
                <th>
                    Professor
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AulaId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@Html.DisplayFor(m => item.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Horario)</td>
                    <td>@Html.DisplayFor(modelItem => item.Professor.Nome)</td>
                    <td class="text-center">
                        <a class="btn btn-primary" data-toggle="tooltip" title="Editar" href="@Url.Action("Edit","Aula",new { id = item.AulaId})"><i class="fa fa-pencil" style="font-size:20px "></i></a>
                        <span></span>
                        <a class="btn btn-danger" data-toggle="tooltip" title="Excluir" href="@Url.Action("Delete","Aula",new { id = item.AulaId})"><i class="fa fa-times" style="font-size:20px "></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>





