
@model SGA.Models.Voluntario

@{
    ViewBag.Title = "Create";
}

@Styles.Render("~/Content/css")

<ol class="breadcrumb">
    <li> <a href="@Url.Action("Index","Home")">Início</a> </li>
    <li> <a href="@Url.Action("Index","Cadastros")">Cadastros</a> </li>
    <li> <a href="@Url.Action("Index","Voluntario")">Voluntários</a> </li>
    <li class="active">Novo</li>
</ol>

<br />
<div class="container">

    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-12">
                    <i class="fa fa-group fa-3x"></i>
                    <span style="margin-left:25px;font-size:32px">Novo Voluntário</span>
                </div>
            </div>
              
        </div>
        <div class="panel-body">

            @using (Html.BeginForm("Create", "Voluntario", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="col-md-2 control-label"> CPF</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control", @maxlength = "12", @placeholder = "Documento" } })
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-2 control-label"> Nome</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @maxlength = "30" , @placeholder = "Insira o nome" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="form-group">
                    <label class="col-md-2 control-label"> Sobrenome</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Sobrenome, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", @placeholder = "Insira o sobrenome" } })
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Data de Nascimento</label>
                    <div class="col-lg-1">
                        <div class="input-group">
                            @Html.EditorFor(model => model.DtNascimento, new { htmlAttributes = new { @class = "form-control", @id = "dtNascimento" } })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="form-group">
                    <label class="col-md-2 control-label"> Idade</label>
                    <div class="col-md-1">
                        @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "form-control", @min = "14", @max = "100" } })
                    </div>
                </div>

                <div class="clearfix"></div>

                <div class="form-group">
                    <label class="col-md-2 control-label"> Telefone</label>
                    <div class="col-md-2">
                        <input placeholder="Telefone" type="text" name="TelefoneContato" class="form-control" maxlength="9" />
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <div class="col-lg-8" style="margin-left:182px">
                        <button class="btn btn-primary btn-lg">Enviar</button>
                        <a class="btn btn-danger btn-lg b" href="@Url.Action("Index","Voluntario")">Cancelar</a>
                    </div>
                    <div class="col-lg-2">
                       
                    </div>
                </div>
            }

        </div>
    </div>

</div>

@Scripts.Render("~/bundles/jquery")


