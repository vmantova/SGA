
@model SGA.Models.Ementa

@{
    ViewBag.Title = "Create";
}

@Styles.Render("~/Content/css")

<ol class="breadcrumb">
    <li> <a href="@Url.Action("Index","Home")">Início</a> </li>
    <li> <a href="@Url.Action("Index","Cadastros")">Cadastros</a> </li>
    <li> <a href="@Url.Action("Index","Aula")">Ementas</a> </li>
    <li class="active">Novo</li>
</ol>

<br />
<div class="container">

    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-12">
                    <i class="fa fa-group fa-3x"></i>
                    <span style="margin-left:25px;font-size:32px">Nova Ementa</span>
                </div>
            </div>

        </div>
        <div class="panel-body">

            @using (Html.BeginForm("Create", "Ementa", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Matéria</label>
                    <div class="col-lg-2">
                        @Html.DropDownListFor(m => m.AulaId, new SelectList(ViewBag.Aulas, "AulaId", "Titulo"), new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Descrição</label>
                    <div class="col-lg-12">
                        <input type="text" name="Descricao" class="form-control" maxlength="500" placeholder="Descrição Adicional" />
                    </div>

                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Bibliografia</label>
                    <div class="col-lg-12">
                        <textarea class="form-control" name="Bibliografia" cols="50" rows="5" maxlength="800" placeholder="Livros Indicados">
                            </textarea>
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <div class="col-lg-8" style="margin-left:182px">
                        <button class="btn btn-primary btn-lg">Enviar</button>
                        <a class="btn btn-danger btn-lg b" href="@Url.Action("Index")">Cancelar</a>
                    </div>
                </div>
            }

        </div>
    </div>

</div>

@Scripts.Render("~/bundles/jquery")


