
@model SGA.Models.Ementa

@{
    ViewBag.Title = "Edit";
}

@Styles.Render("~/Content/css")

<ol class="breadcrumb">
    <li> <a href="@Url.Action("Index","Home")">Início</a> </li>
    <li> <a href="@Url.Action("Index","Cadastros")">Cadastros</a> </li>
    <li> <a href="@Url.Action("Index","Aula")">Ementas</a> </li>
    <li class="active">Editar</li>
</ol>

<br />
<div class="container">

    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-12">
                    <i class="fa fa-group fa-3x"></i>
                    <span style="margin-left:25px;font-size:32px">Editar Ementa</span>
                </div>
            </div>

        </div>
        <div class="panel-body">

            @using (Html.BeginForm("Edit", "Ementa", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.EmentaId)
                @Html.HiddenFor(m => m.DtCadastro)

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Matéria</label>
                    <div class="col-lg-2">
                        @Html.DropDownListFor(m => m.AulaId, new SelectList(ViewBag.Aulas, "AulaId", "Titulo"), new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Descrição</label>
                    <div class="col-lg-8">
                        @Html.EditorFor(m => Model.Descricao, new { htmlAttributes = new { @class = "form-control", @maxlength = "500", @placeholder = "Descrição Adicional" } })
                    </div>

                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label"> Bibliografia</label>
                    <div class="col-lg-8">
                        @Html.EditorFor(m => Model.Bibliografia, new { htmlAttributes = new { @class = "form-control", @maxlength = "800", @placeholder = "Livros Indicados", @type= "textarea" } })
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <div class="col-lg-8" style="margin-left:182px">
                        <button class="btn btn-primary btn-lg">Salvar</button>
                        <a class="btn btn-danger btn-lg b" href="@Url.Action("Index")">Cancelar</a>
                    </div>
                </div>
            }

        </div>
    </div>

</div>

@Scripts.Render("~/bundles/jquery")


