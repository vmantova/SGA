@model IEnumerable<SGA.Models.Ementa>

@{
    ViewBag.Title = "Index";
}


<ol class="breadcrumb">
    <li> <a href="@Url.Action("Index","Home")">Início</a> </li>
    <li> <a href="@Url.Action("Index","Cadastros")">Cadastros</a> </li>
    <li class="active">Ementa</li>
</ol>

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-10">
                <i class="fa fa-group fa-3x"></i>
                <span style="margin-left:25px;font-size:32px">Ementas Cadastradas</span>
            </div>
            <div class="col-lg-offset-2 text-center">
                <a class="btn btn-default btn-lg" role="button" href="@Url.Action("Create")">Novo</a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-striped table-hover table-condensed">
            <tr>
                <th>ID</th>
                <th>Matéria</th>
                <th>Descrição</th>
                <th>Bibliografia</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmentaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aula.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bibliografia)
                    </td>
                    <td width="100px" class="text-center">
                        <a class="btn btn-primary" data-toggle="tooltip" title="Editar" href="@Url.Action("Edit","Ementa",new { id = item.EmentaId})"><i class="fa fa-pencil" style="font-size:20px "></i></a>
                        <span></span>
                        <a class="btn btn-danger" data-toggle="tooltip" title="Excluir" href="@Url.Action("Delete","Ementa",new { id = item.EmentaId})"><i class="fa fa-times" style="font-size:20px "></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
